FEL pulse exceeds 1.6 mJ/mum^2.\n","versions":[{"version":"v1","created":"Wed, 20 Feb 2013 09:33:15 GMT"},{"version":"v2","created":"Fri, 22 Feb 2013 09:05:41 GMT"},{"version":"v3","created":"Fri, 3 May 2013 07:36:11 GMT"},{"version":"v4","created":"Mon, 22 Jul 2013 12:50:37 GMT"},{"version":"v5","created":"Mon, 25 Nov 2013 09:31:20 GMT"}],"update_date":"2013-11-26"}
