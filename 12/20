le primordial\nmagnetic fields.\n","versions":[{"version":"v1","created":"Fri, 20 Dec 2013 05:39:54 GMT"},{"version":"v2","created":"Mon, 30 Dec 2013 18:20:58 GMT"}],"update_date":"2014-03-12"}
